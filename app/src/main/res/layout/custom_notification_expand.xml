<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:padding="5dp"
            android:id="@+id/liner_bottom_play"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:background="@color/colorPrimary"
            android:orientation="horizontal"
            android:layout_height="100dp">
        <ImageView

                android:id="@+id/notification_expand_img"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:src="@drawable/ic_logo_souncloud"
                android:layout_height="match_parent"
        />
        <LinearLayout
                android:layout_weight="3"
                android:orientation="vertical"
                android:padding="5dp"
                android:layout_marginLeft="5dp"
                android:layout_width="0dp"
                android:layout_height="match_parent">
            <TextView
                    android:id="@+id/notification_expand_tv_tenBaiHat"
                    android:text="Hãy trao cho anh"
                    android:textSize="23sp"
                    android:layout_weight="2"
                    android:textColor="@color/color_TitleActionbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/notification_expand_tv_tenCaSi"
                    android:text="Sơn tùng MTP"
                    android:textSize="18sp"
                    android:layout_weight="1"
                    android:textColor="@color/color_bg_login_center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

