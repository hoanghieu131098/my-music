<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="@dimen/height_nav_head_drawer"
              android:gravity="center"
              android:theme="@style/CustomNavHeadDrawer">
    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/nav_header_imageview"
            android:layout_width="@dimen/height_with_img_avartar"
            android:layout_height="@dimen/height_with_img_avartar"/>
    <TextView
            android:id="@+id/nav_header_textView"

            android:gravity="center"
            android:textSize="@dimen/text_size_name_nav_head_drawer_20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_TitleActionbar"/>
</LinearLayout>